@model QuickResume.Models.Profile

<div class="container">
    <h2>Edit Profile</h2>

    <form asp-controller="Profile" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="FullName"></label>
            <input asp-for="FullName"  type="text" />
            <span asp-validation-for="FullName"></span>
        </div>

        <div>
            <label asp-for="DateofBirth"></label>
            <input asp-for="DateofBirth"  type="date" value="@Model.DateofBirth.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DateofBirth"></span>
        </div>

        <div>
            <label asp-for="Gender"></label>
            <select asp-for="Gender" >
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender"></span>
        </div>

        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email"  type="email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber"  />
            <span asp-validation-for="PhoneNumber"></span>
        </div>

        <div>
            <label asp-for="Street"></label>
            <input asp-for="Street"  />
            <span asp-validation-for="Street"></span>
        </div>

        <div>
            <label asp-for="City"></label>
            <input asp-for="City"  />
            <span asp-validation-for="City"></span>
        </div>

        <div>
            <label asp-for="Province"></label>
            <input asp-for="Province"  />
            <span asp-validation-for="Province"></span>
        </div>

        <div>
            <label asp-for="ZipCode"></label>
            <input asp-for="ZipCode"  />
            <span asp-validation-for="ZipCode"></span>
        </div>

        <div>
            <label asp-for="Country"></label>
            <input asp-for="Country"  type="text" />
            <span asp-validation-for="Country"></span>
        </div>

        <div class="btn-container">
            <button type="submit" class="edit-btn">Update</button>
            <a asp-action="Index" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>

