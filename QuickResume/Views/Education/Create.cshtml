@model QuickResume.Models.Education

@{
    ViewData["Title"] = "Add Education";
}

<div class="container">
    <h2>Add Education</h2>

    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Institution"></label>
            <input asp-for="Institution"  />
            <span asp-validation-for="Institution"></span>
        </div>

        <div>
            <label asp-for="Degree"></label>
            <input asp-for="Degree"  />
            <span asp-validation-for="Degree"></span>
        </div>

        <div>
            <label asp-for="FieldOfStudy"></label>
            <input asp-for="FieldOfStudy"  />
            <span asp-validation-for="FieldOfStudy"></span>
        </div>

        <div>
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" type="date"  />
            <span asp-validation-for="StartDate"></span>
        </div>

        <div>
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" type="date"  />
            <span asp-validation-for="EndDate"></span>
        </div>

        <div class="btn-container">
            <button type="submit" class="create-btn">Add Education</button>
        </div>

    </form>
</div>
