@model QuickResume.Models.Skill

@{
    ViewData["Title"] = "Delete Skill";
}

<div class="container">
    <h2>Delete Skill</h2>
    <p style="text-align: center">Are you sure you want to delete this skill entry?</p>

    <form asp-action="Delete" method="post" style="margin: auto">
        <input type="hidden" asp-for="Id" />
        <div class="btn-container" style="display: flex; gap: 10px; justify-content:center; margin-top: 10px;">
            <button type="submit" style="background-color: red; color: #ffffff; padding: 10px 20px; border: none; border-radius: 5px;cursor: pointer;">Delete</button>
            <button style="background-color: #010c80; color: #ffffff; padding: 10px 20px; border: none; border-radius: 5px;cursor: pointer;">
                <a asp-action="Index">Cancel</a>
            </button>
        </div>
    </form>
</div>