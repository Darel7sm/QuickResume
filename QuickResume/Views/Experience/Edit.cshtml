@model QuickResume.Models.Experience

@{
    ViewData["Title"] = "Edit Experience";
}

<div class="container">
    <h2>Edit Experience</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="CompanyName"></label>
            <input asp-for="CompanyName"  />
            <span asp-validation-for="CompanyName"></span>
        </div>

        <div>
            <label asp-for="JobTitle"></label>
            <input asp-for="JobTitle"  />
            <span asp-validation-for="JobTitle"></span>
        </div>

        <div>
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate"  type="date" />
            <span asp-validation-for="StartDate"></span>
        </div>

        <div>
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate"  type="date" />
            <span asp-validation-for="EndDate"></span>
        </div>

        <div>
            <div style="display: flex; justify-content: start; place-items: center; gap: 5px;">
                <label asp-for="IsCurrentlyWorking"></label>
                <input asp-for="IsCurrentlyWorking" type="checkbox" style="max-width: min-content; place-self: flex-end;" />
            </div>
            <span asp-validation-for="IsCurrentlyWorking"></span>
        </div>

        <div>
            <label asp-for="State"></label>
            <input asp-for="State"  />
            <span asp-validation-for="State"></span>
        </div>

        <div>
            <label asp-for="City"></label>
            <input asp-for="City"  />
            <span asp-validation-for="City"></span>
        </div>

        <div>
            <label asp-for="JobDuty"></label>
            <textarea asp-for="JobDuty" class="textarea"></textarea>
            <span asp-validation-for="JobDuty"></span>
        </div>

        <div class="btn-container">
            <button type="submit" class="edit-btn">Update Experience</button>
            <button class="cancel-btn">
                <a asp-action="Index">Cancel</a>
            </button>
        </div>
    </form>
</div>

