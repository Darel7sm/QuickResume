@model QuickResume.Models.Summary

@{
    ViewData["Title"] = "Add Summary";
}

<div class="container">
    <h2 >Add Summary</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Position"></label>
            <input asp-for="Position"  placeholder="Enter your desired job title" required />
            <span asp-validation-for="Position" ></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="textarea" placeholder="Write a short professional summary" required ></textarea>
            <span asp-validation-for="Description" ></span>
        </div>

        <div class="btn-container">
            <button type="submit" class="create-btn">Add Summary</button>
        </div>
    </form>
</div>
