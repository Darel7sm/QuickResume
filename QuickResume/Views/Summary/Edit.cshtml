@model QuickResume.Models.Summary

@{
    ViewData["Title"] = "Edit Summary";
}

<div class="container">
    <h2>Edit Summary</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Position"></label>
            <input asp-for="Position"  placeholder="Enter your desired job title" required />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description"  placeholder="Write a short professional summary" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="btn-container">
            <button type="submit" class="edit-btn">Update Summary</button>
            <a asp-action="Index" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>
